<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 定义所有的SQL语句的映射， 对于本实体而言相关的所有的SQL代码都在此定义 -->
<mapper namespace="com.yootk.mall.dao.IActionDAO">   <!-- SSM整合的时候，这个命名空间异常重要 -->
    <sql id="selectBase">
         SELECT actid FROM action
    </sql>
    <select id="findAllByMember" parameterType="java.lang.String" resultType="java.lang.String">
        <include refid="selectBase"/>
        <where>
            rid IN (SELECT rid FROM member_role WHERE mid=#{mid})
        </where>
    </select>
</mapper>