<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 定义所有的SQL语句的映射， 对于本实体而言相关的所有的SQL代码都在此定义 -->
<mapper namespace="com.yootk.admin.dao.ICatogeryDAO">   <!-- SSM整合的时候，这个命名空间异常重要 -->
    <sql id="selectBase">
         SELECT cid,title,grade,icon,sort,stitle,sdecription,skeyword,state,eid FROM catogery
    </sql>
    <select id="findCatogeryByGrade" parameterType="java.lang.Integer" resultType="Catogery">
        <include refid="selectBase"/>
        <where>
            grade=#{grade}
        </where>
    </select>
</mapper>